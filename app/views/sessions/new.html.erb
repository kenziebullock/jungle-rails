<h1>Login</h1>

<%= form_tag '/login', :html => {:class => "form-horizontal center"} do %>

  <div class="form-group">
    Email: <%= text_field_tag :email, '', :class => "form-control" %>
  </div>
  <div class="form-group">
    Password: <%= password_field_tag :password, '', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Submit" %>
  </div>

<% end %>